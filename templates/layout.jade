doctype html
html.no-js
head
  meta(charset='utf-8')
  meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
  title
    block title
      = locals.name
  meta(content='CSS, JavaScript and front-end dev screencasts', name='description')
  meta(content='width=device-width', name='viewport')
  link(href='http://fonts.googleapis.com/css?family=Wendy+One|Montserrat', rel='stylesheet')
  link(href='./stylesheets/site.css', media='screen', rel='stylesheet', type='text/css')
  include partials/modernizr.js
  body(class=bodyclass)
    block content
    script(src='http://code.jquery.com/jquery-1.10.1.min.js')
    script(src='./javascripts/site.js')
    include partials/analytics.js
    noscript
      style
        <div class='container'>, blockquote { opacity: 1 }</div>

